<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Notez vos films préférés</h1>
      <p>Bienvenu sur mon site où vous pouvez noter vos films préférés </p>
      <p><%= link_to "Sign Up Pour Noter Un Film", new_user_registration_path, class: "btn primary-btn btn-lg" %></p>
  </div>
<% end %>


<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag movie.image.url(:medium), class: "image"), movie %>
      </div>
      </div>
  <% end %>
</div>
